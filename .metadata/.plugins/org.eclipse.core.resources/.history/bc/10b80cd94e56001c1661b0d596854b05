	String comment = request.getParameter("comment");
	
	String sql = "UPDATE phonebook SET fr_name = ?, fr_phone1 = ?, fr_phone2 = ?, fr_email = ?, fr_address = ?, fr_comment = ? WHERE seq = ? ";
	try {
		pstmt = conn.prepareStatement(sql);
